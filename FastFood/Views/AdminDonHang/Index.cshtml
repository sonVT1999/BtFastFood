
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using FastFood.Models
@model IEnumerable<DONHANG>

<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            ĐƠN HÀNG
        </div>
        <div>
            <button class="btn btn-outline-primary"><a href="@Url.Action("Add", "AdminDonHang")"><i class="fas fa-plus-circle" style="font-size: 150%"></i></a></button>

            <form action="Search" method="post">
                <button type="submit" class="btn btn-outline-primary sel" style="float: right">Search</button>
                <input type="text" class="form-control search" placeholder=" Search" style="float: right" name="MaKhachHang">
            </form>
        </div>

        <div>
            <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
                <thead>
                    <tr>
                        <th data-breakpoints="xs">Mã ĐƠN HÀNG</th>
                        <th>Ngày Đặt</th>
                        <th>Ngày Giao</th>
                        <th>Thành Tiền</th>
                        <th>Trạng Thái</th>
                        <th>Mã Người Dùng</th>
                        <th>Mã Khách Hàng</th>
                        <th colspan="2">Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DONHANG item in Model)
                    {
                    <tr data-expanded="true">
                        <td>@item.MaDonHang</td>
                        <td>@item.NgayDat</td>
                        <td>@item.NgayGiao</td>
                        <td>@item.ThanhTien</td>
                        <td>@item.TrangThai</td>
                        <td>@item.MaNguoiDung</td>
                        <td>@item.MaKhachHang</td>
                        <td><a href="/AdminDonHang/Edit/@item.MaDonHang"><i class="fas fa-edit" style="font-size: 150%"></i></a></td>
                        <td><a href="/AdminDonHang/Delete/@item.MaDonHang"><i class="fa fa-trash" style="font-size: 150%"></i></a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>









