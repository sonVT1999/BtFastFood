
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using FastFood.Models
@model IEnumerable<ANH>

<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            Hình Ảnh Sản Phẩm
        </div>
        <div>
            <button class="btn btn-outline-primary"><a href="@Url.Action("Add", "AdminAnh")"><i class="fas fa-plus-circle" style="font-size: 150%"></i></a></button>
        </div>

        <div>
            <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
                <thead>
                    <tr>
                        <th data-breakpoints="xs">Mã Ảnh</th>
                        <th>Link Ảnh</th>
                        <th>Mã SP</th>
                        <th colspan="2">Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ANH item in Model)
                    {
                    <tr data-expanded="true">
                        <td>@item.MaAnh</td>
                        <td>@item.LinkAnh</td>
                        <td>@item.MaSanPham</td>
                        <td><a href="@Url.Action("Edit", "AdminAnh")"><i class="fas fa-edit" style="font-size: 150%"></i></a></td>
                        <td><a href="/AdminAnh/Delete/@item.MaAnh"><i class="fa fa-trash" style="font-size: 150%"></i></a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>









