
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using FastFood.Models
@model IEnumerable<NGUYENLIEU>

<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            Nguyên Liệu
        </div>
        <div>
            <button class="btn btn-outline-primary"><a href="@Url.Action("Add", "AdminNguyenLieu")"><i class="fas fa-plus-circle" style="font-size: 150%"></i></a></button>

            <form action="Search" method="post">
                <button type="submit" class="btn btn-outline-primary sel" style="float: right">Search</button>
                <input type="text" class="form-control search" placeholder=" Search" style="float: right" name="TenNguyenLieu">
            </form>
        </div>
        <div>
            <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
                <thead>
                    <tr>
                        <th data-breakpoints="xs">Mã Nguyên Liệu</th>
                        <th>Tên Nguyên Liệu</th>
                        <th>Đơn Vị Tính</th>
                        <th colspan="2">Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (NGUYENLIEU item in Model)
                    {
                        <tr data-expanded="true">
                            <td>@item.MaNL</td>
                            <td>@item.TenNguyenLieu</td>
                            <td>@item.DonViTinh</td>
                            <td><a href="/AdminNguyenLieu/Edit/@item.MaNL"><i class="fas fa-edit" style="font-size: 150%"></i></a></td>
                            <td><a href="/AdminNguyenLieu/Delete/@item.MaNL"><i class="fa fa-trash" style="font-size: 150%"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

