
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using FastFood.Models
@model IEnumerable<SANPHAM>

<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            SẢN PHẨM
        </div>
        <div>
            <button class="btn btn-outline-primary"><a href="@Url.Action("Add", "AdminSanPham")"><i class="fas fa-plus-circle" style="font-size: 150%"></i></a></button>

            <form action="Search" method="post">
                <button type="submit" class="btn btn-outline-primary sel" style="float: right">Search</button>
                <input type="text" class="form-control search" placeholder=" Search" style="float: right" name="Ten">
            </form>
        </div>

        <div>
            <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
                <thead>
                    <tr>
                        <th data-breakpoints="xs">Mã Sản Phẩm</th>
                        <th>Tên</th>
                        <th>Đơn Giá</th>
                        <th>Mô Tả</th>
                        <th>Mã Danh Mục</th>
                        <th colspan="2">Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (SANPHAM item in Model)
                    {
                        <tr data-expanded="true">
                            <td>@item.MaSanPham</td>
                            <td>@item.Ten</td>
                            <td>@item.DonGia</td>
                            <td>@item.MoTa</td>
                            <td>@item.MaDM</td>
                            <td><a href="/AdminSanPham/Edit/@item.MaSanPham"><i class="fas fa-edit" style="font-size: 150%"></i></a></td>
                            <td><a href="/AdminSanPham/Delete/@item.MaSanPham"><i class="fa fa-trash" style="font-size: 150%"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>











