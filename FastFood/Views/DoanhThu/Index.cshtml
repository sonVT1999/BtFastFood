
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using FastFood.Models
@model IEnumerable<DONHANG>

@{ float i = 0;}



<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            Thống Kê Doanh Thu
        </div>
        <div>
            <form method="post" action="ThongKeDoanhThu">
                <table class="table">
                    <thead class=" text-primary">
                    <th>
                        Ngày 1
                    </th>

                    <th>
                        Ngày 2
                    </th>

                    <th>
                    </th>
                    </thead>
                    <tbody>

                        <tr>
                            <th>
                                <input type="text" name="ngay1" placeholder="nhập ngày 1" class="text-center" />
                            </th>
                            <th>
                                <input type="text" name="ngay2" placeholder="nhập ngày 2" class="text-center" />
                            </th>
                            <th>
                                <button>Thống Kê</button>
                            </th>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>

        <div>
            <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
                <thead>
                    <tr>
                        <th data-breakpoints="xs">Mã ĐƠN HÀNG</th>
                        <th>Ngày Đặt</th>
                        <th>Ngày Giao</th>
                        <th>Tổng Tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DONHANG item in Model)
                    {
                        <tr data-expanded="true">
                            <td>@item.MaDonHang</td>
                            <td>@item.NgayDat</td>
                            <td>@item.NgayGiao</td>
                            <td>@item.ThanhTien</td>
                        </tr>
                        i += Convert.ToInt32(@item.ThanhTien);
                    }
                </tbody>
            </table>
            <div>
                <h4 class="Tongtien">Doanh thu của quán: @i.ToString("N0") VNĐ </h4>
                <style>
                    .Tongtien {
                        color: red;
                    }
                </style>
            </div>
        </div>
    </div>
</div>

















